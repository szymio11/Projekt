@model Blog.ViewModels.IndexViewModels
@{
    if (User.Identity.IsAuthenticated)
    {
        ViewBag.Title = "Home page for ziom";
    }
    else
    {
        ViewBag.Title = "Home page for guest user.";
    }
}

<div class="row">
    <div class="col-md-12">
        <div class="jumbotron">
            <h1>Welcome to My Blog!</h1>
            <p class="lead">Thank you so much for visiting. This is my test website built with ASP.NET. </p>
        </div>
    </div>
</div> <!-- end of header .row -->

<div class="row">
    <div class="col-md-8">

        @foreach (var post in Model.Posts)
        {
        <div class="post">
            <h3>@post.Title</h3>
            <h6>@String.Format("{0:yyyy-MM-dd}", post.CreationDate)</h6>
            <p>@post.Description</p>
            @Html.ActionLink("Czytaj Dalej..", "Details","Post", new { id = post.PostID }, new { @class = "btn btn-success" }) 
        </div>

        <hr>
        }


    </div>

    <div class="col-md-3 col-md-offset-1">
        <h2>Category</h2>
      
            <ul class="list-group">
                @foreach (var category in Model.Categories)
                {
                <li class="list-group-item li-style"><a href="#">@category.Name</a></li>
                
                }
                
            </ul>
        <h2>Tags</h2>
@foreach (var tag in Model.Tags)
            {
    <button type="button" href="#" class="btn btn-default btn-lg">
        <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>  @tag.Name
    </button>
}










      
    </div>
</div>