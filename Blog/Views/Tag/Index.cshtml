@model IEnumerable<Blog.Models.Tag>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <span class="label label-default">@Html.DisplayFor(modelItem => item.Name)</span>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TagID }, new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Read More", "Details", new { id=item.TagID }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.TagID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
